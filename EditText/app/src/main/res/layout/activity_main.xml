<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:backgroundTint="#02024A"
        android:hint="Enter String"
        android:inputType="text"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:drawableLeft="@drawable/ic_baseline_text_fields_24"
        android:layout_marginBottom="20dp"
        />

    <EditText
        android:id="@+id/et2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:backgroundTint="#02024A"
        android:hint="Enter Number"
        android:inputType="number"
        android:cursorVisible="true"
        android:drawableLeft="@drawable/ic_baseline_format_list_numbered_24"
        android:layout_marginBottom="20dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/et3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:backgroundTint="#FFFFFF"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:cursorVisible="false"
            android:textCursorDrawable="@null"
            android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
            android:layout_marginBottom="20dp"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="100dp"/>

    <Button
        android:id="@+id/b1"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:text="submit"
        android:textStyle="bold"
        android:backgroundTint="#520788"
        android:rotation="2"
        android:layout_margin="50dp"/>

</LinearLayout>